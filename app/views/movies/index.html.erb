<p id="notice"><%= notice %></p>

<div class="container">
<h2>Movies INDEX</h2>

 <div class="search-bar">
  <div class="search-form row">
    <div class="form-input">
  <%= form_tag movies_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a movie"
  %>
</div>
<div class="form-button">
  <%= submit_tag "Search" %>
</div>
<% end %>
 </div>
</div>



  <div class="movie-card-box">
      <% @movies.each do |movie| %>
      <!-- this image will be a movie.image linked to movie show path -->
          <img class="movie-card-img" src="https://www.joblo.com/assets/images/joblo/posters/2019/08/joker-poster-main2.jpg">
      <% end %>
  </div>

</div>

